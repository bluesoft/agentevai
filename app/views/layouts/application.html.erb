<!DOCTYPE html>
<html>
<head>
  <title>A Gente Vai!</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag('http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js') %>
  <%= javascript_include_tag('http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js') %>
  <%= javascript_include_tag('mbMenu.js') %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<table id="menu" class="rootVoices" cellspacing='0' cellpadding='0' border='0'>
		<tr>
	    	<td class="rootVoice {menu: 'empty'}" onclick="goTo('/teams');"><%= image_tag "icons/team.png" %><%= t('teams.teams')%></td>
	    	<td class="rootVoice {menu: 'empty'}" onclick="goTo('/people');" ><%= image_tag "icons/person.png" %><%= t('people.people')%></td>
	    	<td class="rootVoice {menu: 'empty'}" onclick="goTo('/events');" ><%= image_tag "icons/event.png" %><%= t('events.events')%></td>
		</tr>
	</table>

	<div id="header" class="ui-state-active">
		<%= image_tag "logo.png" %>
	</div>

	<div id="content">
		<%= yield %>
	</div>	
</body>
</html>
